<%= form_tag admin_customer_segmentation_index_path, method: :get do %>
  <div class="row" data-hook="filters">
  </div>

  <div>
    <div>
      <%= submit_tag :search %>
    </div>
  </div>

  <hr />

  <div data-hook="users_list"></div>

  <% if @results.present? %>
    <%= render partial: 'users', locals: { results: @results } %>
  <% end %>

  <!-- pass all options as a hash -->
  <span data-name="filter_operator_list" data-value="<%= FILTERS.to_json %>"> </span>

  <div class="hidden">

    <div data-name="filter-row">
      <div class="col-md-3" data-hook="metric">
        <span data-name="metric-value"></span>
      </div>

      <div class="col-md-3" data-hook="operator">
      </div>

      <div class="col-md-3" data-hook="value">
      </div>
    </div>

  </div>

<% end %>
