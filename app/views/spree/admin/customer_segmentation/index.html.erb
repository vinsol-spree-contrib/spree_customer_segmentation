<div>
  FOR TEST PURPOSES
  <br />
  <%= link_to 'Name', '#', data: { category: 'user', value: 'name', name: 'filter', metric: 'user_name', text: 'Name' } %>
  <%= link_to 'Email', '#', data: { category: 'user', value: 'email', name: 'filter', metric: 'user_email', text: 'Email' } %>
  <%= link_to 'Contact Number', '#', data: { category: 'user', value: 'contact_number', name: 'filter', metric: 'user_contact_number', text: 'Contact Number' } %>

  <%= link_to 'Revenue', '#', data: { category: 'order', value: 'revenue', name: 'filter', metric: 'order_revenue', text: 'Revenue' } %>
</div>
<hr />
<hr />

<%= form_tag admin_customer_segmentation_index_path, method: :get do %>
  <div class="row" data-hook="filters">
  </div>

  <div>
    <div>
      <%= submit_tag :search %>
    </div>
  </div>

  <hr />

  <div data-hook="users_list"></div>

  <% if @results.present? %>
    <%= render partial: 'users', locals: { results: @results } %>
  <% end %>

  <!-- pass all options as a hash -->
  <span data-name="filter_operator_list" data-value="<%= FILTERS.to_json %>"> </span>

  <div class="hidden">

    <div data-name="filter-row">
      <div class="col-md-3" data-hook="metric">
        <%# hidden_field_tag :metric_clone, nil, data: { name: 'metric' } %>
        <span data-name="metric-value"></span>
      </div>

      <div class="col-md-3" data-hook="operator">
        <%# select_tag :operator_clone, nil, data: { name: 'operator' } %>
      </div>

      <div class="col-md-3" data-hook="value">
        <%# text_field_tag :value_clone, nil, data: { name: 'value' } %>
      </div>
    </div>

  </div>

<% end %>
